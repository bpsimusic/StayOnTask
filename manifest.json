{
  "manifest_version": 2,
  "name": "Stay On Task",
  "description": "This extension blocks certain websites",
  "version": "0.0.0.1",
  "browser_action": {
    "default_icon": "exclaim-icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["jquery.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["sidenav.css"],
      "js": ["jquery.js", "sidenav.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["sidenav.html"]
}

{
  "manifest_version": 2,
  "name": "Stay On Task",
  "description": "This extension blocks certain websites",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["iframeInjector.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["iframe.css", "sidenav.html"]
}
